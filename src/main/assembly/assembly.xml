<assembly>
  <id>distribution</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
  </dependencySets>

  <files>
    <file>
      <source>conf/ocp/ds-image.xml</source>
      <outputDirectory>conf/</outputDirectory>
      <fileMode>0644</fileMode>
      <destName>ds-image.xml.SAMPLE</destName>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <outputDirectory>conf</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <directory>conf</directory>
      <excludes>
        <exclude>ocp/</exclude>
        <exclude>ds-image-local.yaml</exclude>
        <exclude>ds-image-kaltura-integration-test.yaml</exclude> <!-- Not sute why this test file is in the main configuration folder. -->
      </excludes>
    </fileSet>
    <fileSet>
      <outputDirectory>.</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>README.md</include>
        <include>CHANGELOG.md</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/ds-image-${version}</directory>
      <outputDirectory>.</outputDirectory>
      <directoryMode>0755</directoryMode>
      <fileMode>0644</fileMode>
      <includes>
        <include>ds-image.build.properties</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>

